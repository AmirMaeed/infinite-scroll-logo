<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Global Presence - Local Offices Slider</title>

    <!-- Swiper CSS -->
    <link
        rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 50px 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 40px;
        }

        /* Swiper container */
        .swiper {
            width: 100%;
            height: 400px;
        }

        /* Swiper slide */
        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
        }

        /* Office images */
        .office-image {
            max-width: 100%;
            max-height: 200px;
            object-fit: cover;
            border-radius: 8px;
        }

        .office-name {
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
        }

        .office-location {
            font-size: 16px;
            color: #777;
        }
    </style>
</head>

<body>

    <div class="container">
        <h2>Our Global Presence</h2>

        <!-- Swiper -->
        <div class="swiper global-presence-ul">
            <div class="swiper-wrapper">
                <!-- Slide 1 -->
                <div class="swiper-slide">
                    <img class="office-image" src="https://via.placeholder.com/300x200?text=Office+1" alt="Office 1">
                    <div class="office-name">Office 1</div>
                    <div class="office-location">New York, USA</div>
                </div>
                <!-- Slide 2 -->
                <div class="swiper-slide">
                    <img class="office-image" src="https://via.placeholder.com/300x200?text=Office+2" alt="Office 2">
                    <div class="office-name">Office 2</div>
                    <div class="office-location">London, UK</div>
                </div>
                <!-- Slide 3 -->
                <div class="swiper-slide">
                    <img class="office-image" src="https://via.placeholder.com/300x200?text=Office+3" alt="Office 3">
                    <div class="office-name">Office 3</div>
                    <div class="office-location">Berlin, Germany</div>
                </div>
                <!-- Slide 4 -->
                <div class="swiper-slide">
                    <img class="office-image" src="https://via.placeholder.com/300x200?text=Office+4" alt="Office 4">
                    <div class="office-name">Office 4</div>
                    <div class="office-location">Tokyo, Japan</div>
                </div>
                <!-- Slide 5 -->
                <div class="swiper-slide">
                    <img class="office-image" src="https://via.placeholder.com/300x200?text=Office+5" alt="Office 5">
                    <div class="office-name">Office 5</div>
                    <div class="office-location">Sydney, Australia</div>
                </div>
            </div>

            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>

            <!-- Add Navigation -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <!-- Swiper Config -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const swiper = new Swiper('.global-presence-ul', {
                loop: true,
                slidesPerView: 1,
                spaceBetween: 20,
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                navigation: {
                    nextEl: '.swiper-button-next',
                    prevEl: '.swiper-button-prev',
                },
                breakpoints: {
                    640: {
                        slidesPerView: 2,
                    },
                    768: {
                        slidesPerView: 3,
                    },
                    1024: {
                        slidesPerView: 4,
                    },
                },
            });
        });
    </script>

</body>

</html>
